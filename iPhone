package com.example.csee

import androidx.room.Entity
import androidx.room.PrimaryKey
@Entity(tableName = "cseeusers")
data class User(
    @PrimaryKey(autoGenerate = true)
    val uid:Int=0,
    val username:String,
    val userPhone:String
)
