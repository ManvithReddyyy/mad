package com.example.myapplication.ui.theme

class Person {
    var name = "Unknown"
        get() = field.uppercase()

    var age = 0
        set(value) {
            field = if (value >= 0) value else 0
        }
}

fun main() {
    val p = Person()

    p.name = "manvith"
    p.age = -5

    println("Name: ${p.name}") 
    println("Age: ${p.age}")
}
