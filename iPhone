7.1 navigation single activity multiple fragments word app
------------------------
dependency - > implementation("androidx.navigation:navigation-compose:2.9.3")

..

class MainActivity : ComponentActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        enableEdgeToEdge()
        setContent { AppNavigation() }
    }
}

@Composable
fun AppNavigation() {
    val nav = rememberNavController()
    Scaffold { pad ->
        NavHost(nav, "home", Modifier.padding(pad)) {
            composable("home") { Home(nav) }
            composable("word") { WordList(nav) }
        }
    }
}

@Composable
fun Home(nav: NavHostController) = Column(
    Modifier.fillMaxSize(),
    horizontalAlignment = Alignment.CenterHorizontally,
    verticalArrangement = Arrangement.Center
) {
    Text("WORD APP", fontSize = 22.sp)
    Spacer(Modifier.height(16.dp))
    Button(onClick = { nav.navigate("word") }) { Text("Click me") }
}

@Composable
fun WordList(nav: NavHostController) {
    val words = listOf("Compose", "Kotlin", "Dictionary", "Android", "Navigation")
    Column(Modifier.fillMaxSize(), horizontalAlignment = Alignment.CenterHorizontally) {
        Text("Words list", fontSize = 22.sp, modifier = Modifier.padding(16.dp))
        LazyColumn(Modifier.weight(1f)) {
            items(words) { Text(it, fontSize = 20.sp, modifier = Modifier.padding(8.dp)) }
        }
        Spacer(Modifier.height(16.dp))
        Button(onClick = { nav.popBackStack() }) { Text("Back to home") }
    }
}
