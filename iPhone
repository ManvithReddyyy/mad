package com.example.myapplication

fun main() {
    val target = (1..100).random()
    println("Guess the number (1–100)")
    while (true) {
        print("Enter guess: ")
        val g = readLine()?.toIntOrNull() ?: return println("Invalid input!")
        when {
            g < target -> println("Too low!")
            g > target -> println("Too high!")
            else -> return println("You guessed it! It's $target")
        }
    }
}
