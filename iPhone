package com.example.myapplication

class Person {
    companion object {
        var count = 0
        fun increment() { println("incremented"); count++ }
        fun display() = println("Hello")
    }
}

fun main() {
    println("Count=${Person.count}")
    repeat(2) { Person.increment() }
    println("After incrementing count=${Person.count}")
    Person.display()
}
