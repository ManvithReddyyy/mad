2.2 Companion Object

class Person{
  companion object{
    var count=0
    fun increment(){
      println("incremented")
      count++
    }
    fun display()=println("Hello")
  }
}
fun main(){
  println("Count=${Person.count}")
  Person.increment()
  Person.increment()
  println("After incrementing count=${Person.count}")
  Person.display()
}

GETTER AND SETTER
class Person{
  var name: String="Unknown"
  var age:Int=0
  get()=field
  set(value){
    field=if(value>=0) value else 0
  }
}
fun main(){
  val p=Person()
  p.name="Abc"
  p.age=34
  println("Name:${p.name}")
  println("Age:${p.age}")
}
