2.1 Rolling die

class Dice{
  var sides:Int=6
  fun roll():Int{
    var randomNumber=(1..sides).random()
    return randomNumber
  }
}
fun main(){
  val d=Dice()
  val rolled=d.roll()
  println("${d.sides} sided dice rolled $rolled")
}


